		<constructor-arg ref="femmeClient"/>
	</bean>

	<bean id="femmeRasdamanConnector" class="gr.cite.earthserver.xwcpsmars.rasdaman.FemmeRasdamanConnector">
		<constructor-arg ref="rasdamanClient"/>
